
<!doctype html>
<html lang="en">
<head>

    @{
        ViewBag.Title = "Index";
    }


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=11">
    <title>ToDo - Login</title>

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <link href="~/Content/LoginSheet.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/Content/LoginSheet.css")" rel="stylesheet">
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />

</head>

<body>


    @using (Html.BeginForm("Singin", "Login", FormMethod.Post, new { @class = "form-signin" }))
    {
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">ToDo - Login</h1>
            <p>This is private ToDo list for Luboš Hájek please you can use this ToDO List too only if you make a <a runat="server" href="@Url.Action("Index" , "Registration")">registration</a>.
        </div>

        <div class="form-label-group">
            <input type="text" id="inputEmail" class="form-control" name="login" placeholder="Login" required autofocus>
            <label for="inputEmail">Login</label>
        </div>

        <div class="form-label-group">
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
            <label for="inputPassword">Password</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me" name="remember"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block">Sign in</button>
        <p> © 2017-2018 If you have some issues please let me know on my web page <a href="https://hajeklubos.wordpress.com/">hajeklubos.com</a> or email addres: <a href="mailto:hajeklu@outlook.com">hajeklu@outlook.com</a></p>
        if (TempData["error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["error"]
            </div>
        }
    }
</body>
</html>